# =============================================================================
# WordPress Plugin Template - direnv Configuration Template
# =============================================================================
# Usage:
# 1. cp .envrc.example .envrc
# 2. Customize as needed
# 3. direnv allow
#
# Customization Points:
# - Prompt name: Change "(wp-plugin)" in PS1 to your project name
# - Environment variables: Set DB_NAME, etc. to project-specific values
# - Aliases: Add or remove as needed
# =============================================================================

# Project Root
# =============================================================================
export PROJECT_ROOT=$PWD

# PATH Configuration
# =============================================================================
PATH_add bin
PATH_add vendor/bin

# Environment Variables
# =============================================================================
export WP_DEBUG=true
export DB_HOST=localhost
# export DB_NAME=your_database_name # Optional
# export DB_USER=your_username # Optional
# export DB_PASSWORD=your_password # Optional

# Aliases
# =============================================================================
alias cdp="cd $PROJECT_ROOT"
alias cdcore="cd $PROJECT_ROOT/includes/core"
alias cdi18n="cd $PROJECT_ROOT/includes/i18n"
alias cdadmin="cd $PROJECT_ROOT/includes/admin"
alias cdassets="cd $PROJECT_ROOT/assets"

# Custom Functions
# =============================================================================
fe_phpcs() {
    ./vendor/bin/phpcs --standard=WordPress --report=full "${@:-.}"
}

fe_phpcbf() {
    ./vendor/bin/phpcbf --standard=WordPress "${@:-.}"
}

# Prompt Customization
# =============================================================================
export PS1="(wp-plugin) $PS1"
