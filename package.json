{
	"name": "swift-csv",
	"version": "0.9.5",
	"description": "Swift CSV - Simple CSV Management Without the Complexity.",
	"license": "GPL-2.0+",
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"dev": "npm run watch:all",
		"watch:all": "npm run watch:js & npm run watch:css & npm run watch:pro",
		"watch:js": "esbuild assets/js/admin-scripts.js --minify --outfile=assets/js/admin-scripts.min.js --watch",
		"watch:css": "esbuild assets/css/admin-style.css --minify --outfile=assets/css/admin-style.min.css --watch",
		"build": "npm run build:js && npm run build:css && run build:pro",
		"build:js": "esbuild assets/js/admin-scripts.js --minify --outfile=assets/js/admin-scripts.min.js",
		"build:css": "esbuild assets/css/admin-style.css --minify --outfile=assets/css/admin-style.min.css",
		"watch:pro": "esbuild ../swift-csv-pro/assets/js/admin-pro-scripts.js --minify --outfile=../swift-csv-pro/assets/js/admin-pro-scripts.min.js --watch",
		"build:pro": "esbuild ../swift-csv-pro/assets/js/admin-pro-scripts.js --minify --outfile=../swift-csv-pro/assets/js/admin-pro-scripts.min.js",
		"lint:js": "eslint . --ext .js",
		"lint:js:fix": "eslint . --ext .js --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"devDependencies": {
		"@wordpress/babel-plugin-makepot": "^6.39.0",
		"@wordpress/eslint-plugin": "^14.0.0",
		"@wordpress/scripts": "^26.0.0",
		"esbuild": "^0.27.2",
		"eslint": "^8.0.0",
		"eslint-config-wordpress": "^2.0.0",
		"prettier": "^3.4.2"
	}
}
