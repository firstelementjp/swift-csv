# =============================================================================
# WordPress Plugin Template - direnv Configuration
# =============================================================================

# Project Root
# =============================================================================
export PROJECT_ROOT=$PWD

# PATH Configuration
# =============================================================================
PATH_add bin
PATH_add vendor/bin

# Environment Variables
# =============================================================================
export WP_DEBUG=true
export DB_HOST=localhost

# Aliases
# =============================================================================
alias cdp="cd $PROJECT_ROOT"
alias cdcore="cd $PROJECT_ROOT/includes/core"
alias cdi18n="cd $PROJECT_ROOT/includes/i18n"
alias cdadmin="cd $PROJECT_ROOT/includes/admin"
alias cdassets="cd $PROJECT_ROOT/assets"

# Custom Functions
# =============================================================================
fe_phpcs() {
    ./vendor/bin/phpcs --standard=WordPress --report=full "${@:-.}"
}

fe_phpcbf() {
    ./vendor/bin/phpcbf --standard=WordPress "${@:-.}"
}

# Prompt Customization
# =============================================================================
export PS1="(wp-plugin) $PS1"
